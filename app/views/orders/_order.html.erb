<table class="table table-bordered">
  <tr>
    <th>Product Image</th>
    <th>Product Name</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  <% @order.line_items.each do |item| %>
  <tr>
    <td> <%= image_tag item.product.image.tiny %> </td>
    <td> <%= item.product.name %> </td>
    <td> <%= item.product.description %> </td>
    <td> <%= item.quantity %> </td>
    <td>$<%= item.total_price_cents / 100 %> </td>
  </tr>
  <% end %>
</table>